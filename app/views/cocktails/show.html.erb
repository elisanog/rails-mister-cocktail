<h1><%= @cocktail.name%></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> of <%=dose.ingredient.name%></p>
  <p><%= link_to 'Delete this dose', dose_path(dose), method: :delete %></p>
<% end %>

<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
<%= link_to 'Go back to cocktails', cocktails_path%>





